<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:theme="@android:style/Theme.Dialog"
    android:id="@+id/customer_dialog">

    <TextView
        android:id="@+id/customer_id_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/customer_initials_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/customer_id_dialog"/>

    <TextView
        android:id="@+id/customer_name_dialog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/customer_initials_dialog"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/customer_address_dialog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/customer_name_dialog"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/customer_zipcode_dialog"
        android:layout_width="wrap_content"
        android:layout_below="@+id/customer_address_dialog"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>